<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net472</TargetFrameworks>
	<Platforms>AnyCPU;ARM32</Platforms>
	<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	<AssemblyVersion>1.1.4</AssemblyVersion>
	<FileVersion>1.1.4</FileVersion>
	<Version>1.1.4</Version>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Properties\**" />
    <Compile Remove="Windows\**" />
    <EmbeddedResource Remove="Properties\**" />
    <EmbeddedResource Remove="Windows\**" />
    <None Remove="Properties\**" />
    <None Remove="Windows\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="ElaBleCommunication.nuspec" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ElaTagClassLibrary" Version="3.0.4" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Runtime.WindowsRuntime">
      <HintPath>Windows\Foundation\System.Runtime.WindowsRuntime.dll</HintPath>
    </Reference>
    <Reference Include="Windows">
      <HintPath>Windows\Foundation\Windows.winmd</HintPath>
      <IsWinMDFile>true</IsWinMDFile>
    </Reference>
  </ItemGroup>

</Project>
